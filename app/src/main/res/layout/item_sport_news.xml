<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sport_news_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/img_fire"
            android:drawablePadding="12dp"
            android:text="Top News"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/iv_football_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_news_type"
            android:scaleType="centerCrop"
            android:src="@drawable/img_football_news" />


        <TextView
            android:id="@+id/tv_sport_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_football_news"
            android:layout_margin="8dp"
            android:text="Manchester United contact Arsenal to hijack Alexis Sanchez deal"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_one_football"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_news_title"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/img_one_football"
            android:drawablePadding="12dp"
            android:text="Onefootball"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_sub_sport_news"
            android:layout_below="@id/tv_one_football"/>



    </RelativeLayout>


</android.support.v7.widget.CardView>